<div class="">
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h3><%= @post.errors.count %> 個のエラー</h3>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <h2><%= @post.shop.name %></h2>
  <%= form_for @post, url: "/#{@post.shop_id}/posts/new" do |f| %>
  <div class="">
    <label for="">混み具合</label>
    <%= f.radio_button :congestion, 1.to_f %>1
    <%= f.radio_button :congestion, 2.to_f %>2
    <%= f.radio_button :congestion, 3.to_f %>3
    <%= f.radio_button :congestion, 4.to_f %>4
    <%= f.radio_button :congestion, 5.to_f %>5
  </div>
  <div class="">
    <label for="">メニュー</label>
    <%= f.radio_button :menu, 1.to_f %>1
    <%= f.radio_button :menu, 2.to_f %>2
    <%= f.radio_button :menu, 3.to_f %>3
    <%= f.radio_button :menu, 4.to_f %>4
    <%= f.radio_button :menu, 5.to_f %>5
  </div>
  <div class="">
    <label for="">価格帯</label>
    <%= f.radio_button :price, 1.to_f %>1
    <%= f.radio_button :price, 2.to_f %>2
    <%= f.radio_button :price, 3.to_f %>3
    <%= f.radio_button :price, 4.to_f %>4
    <%= f.radio_button :price, 5.to_f %>5
  </div>
  <div class="">
    <label for="">通信環境</label>
    <%= f.radio_button :wifi, 1.to_f %>1
    <%= f.radio_button :wifi, 2.to_f %>2
    <%= f.radio_button :wifi, 3.to_f %>3
    <%= f.radio_button :wifi, 4.to_f %>4
    <%= f.radio_button :wifi, 5.to_f %>5
  </div>
  <div class="">
    <label for="">その他</label>
    <%= f.radio_button :others, 1.to_f %>1
    <%= f.radio_button :others, 2.to_f %>2
    <%= f.radio_button :others, 3.to_f %>3
    <%= f.radio_button :others, 4.to_f %>4
    <%= f.radio_button :others, 5.to_f %>5
  </div>
  <div class="">
    <label for="">レビュー</label>
    <%= f.text_area :review %>
  </div>
  <div class="">
    <%= f.submit "投稿" %>
  </div>
  <% end %>
</div>
