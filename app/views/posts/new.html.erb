<div class="review-page">
  <div class="page-title">
    <h1>レビューを書く</h1>
  </div>
  <div class="left-box">
  <div class="narrow-window">
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <h3><%= @post.errors.count %> 個のエラー</h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h3><%= @post.shop.name %><%= @post.shop.branch %></h3>
    <%= form_for @post, url: "/#{@post.shop_id}/posts/new" do |f| %>
    <table>
      <tr class="">
        <th>混み具合</th>
        <td>
          <div class="form-group row congestion">
            <%= f.hidden_field :congestion, class: :review_star %>
          </div>
          <script>
            $('.congestion').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[congestion]',
              half: true,
            });
          </script>
        </td>
      </tr>
      <tr class="">
        <th>メニュー</th>
        <td>
          <div class="form-group row menu">
            <%= f.hidden_field :menu, class: :review_star %>
          </div>
          <script>
            $('.menu').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[menu]',
              half: true,
            });
          </script>
        </td>
      </tr>
      <tr class="">
        <th>価格帯</th>
        <td>
          <div class="form-group row price">
            <%= f.hidden_field :price, class: :review_star %>
          </div>
          <script>
            $('.price').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[price]',
              half: true,
            });
          </script>
        </td>
      </tr>
      <tr class="">
        <th>通信環境</th>
        <td>
          <div class="form-group row wifi">
            <%= f.hidden_field :wifi, class: :review_star %>
          </div>
          <script>
            $('.wifi').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[wifi]',
              half: true,
            });
          </script>
        </td>
      </tr>
      <tr class="">
        <th>その他</th>
        <td>
          <div class="form-group row others">
            <%= f.hidden_field :others, class: :review_star %>
          </div>
          <script>
            $('.others').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[others]',
              half: true,
            });
          </script>
        </td>
      </tr>
      <tr class="">
        <th>レビュー</th>
        <td><%= f.text_area :review, class:"input-area" %></td>
      </tr>
      <tr class="">
    </table>
      <%= f.submit "投稿", class:"btn-sticky" %>
    <% end %>
  </div>
  </div>
  <div class="right-box">
    <%= image_tag 'review.png', size: '210x250' %>
  </div>
</div>
