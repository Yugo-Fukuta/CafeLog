<h3>レビューしたいお店を検索してください</h3>
<%= search_form_for @q, url: "/shops/search" do |f| %>
  <%= f.search_field :station_name_or_name_cont, class:"input-form" %>
  <%= f.submit "検索" %>
<% end %>

<tbody>
    <th><%= sort_link(@q, :total_point, "評価点順") %></th>
    <br>
  <% @shop.each do |shop| %>
    <tr>
      <td><%= link_to shop.name, "/#{shop.id}/posts/new" %></td>
      <td><%= link_to shop.branch, "/#{shop.id}/posts/new" %></td>
    </tr>
    <br>
  <% end %>
</tbody>
