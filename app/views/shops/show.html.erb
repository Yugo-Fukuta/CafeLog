<div class="">
  <%= @shop.name %>
  <%= @shop.branch %>
  <%= @shop.total_point %>
  <div class="">
    <% if @shop.shop_images.present? %>
      <% @shop.shop_images.each do |image| %>
        <%= attachment_image_tag image, :image, :fill, 200, 200 %>
        <% end %>
    <% else %>
      <%= image_tag 'no_image.png', size: '200x200' %>
    <% end %>
  </div>
  <div class="">
    <div class="">
      混み具合
      <%= @shop.ave_congestion %>
    </div>
    <div class="">
      メニュー
      <%= @shop.ave_menu %>
    </div>
    <div class="">
      価格帯
      <%= @shop.ave_price %>
    </div>
    <div class="">
      通信環境
      <%= @shop.ave_wifi %>
    </div>
    <div class="">
      その他
      <%= @shop.ave_others %>
    </div>
  </div>
</div>
<% @shop.posts.each do |post| %>
<h4><%= post.user.name %></h4>
<table>
  <tr>
    <th>総合評価</th>
    <td><%= post.post_total_point %></td>
  </tr>
  <tr>
    <th>混み具合</th>
    <td><%= post.congestion %></td>
  </tr>
  <tr>
    <th>メニュ-</th>
    <td><%= post.menu %></td>
  </tr>
    <th>価格帯</th>
    <td><%= post.price %></td>
  <tr>
    <th>通信環境</th>
    <td><%= post.wifi %></td>
  </tr>
  <tr>
    <th>その他</th>
    <td><%= post.others %></td>
  </tr>
  <tr>
    <th>レビュ-</th>
    <td><%= post.review %></td>
  </tr>
</table>
<% end %>
